<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.iudigital.supermercado.controllers.InicioController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f5f5f5;">
    
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Supermercado La Economía - Simulación de Cobro" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Sistema de simulación con concurrencia" 
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="btnIniciar" text="Iniciar Simulación" 
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 250; -fx-pref-height: 45; -fx-font-weight: bold;"/>
            </HBox>
            
            <Label text="Consola de Salida:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            
            <TextArea fx:id="consolaSalida" 
                     editable="false" 
                     wrapText="true"
                     style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 12px;"
                     VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #34495e;">
            <Label text="Sistema de Simulación de Cobro - Concurrencia en Java" 
                   style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
    
</BorderPane>

